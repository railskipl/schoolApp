

<% week =[] %>
<% @weekdays.each do |dr| %>
  <% week.push dr.weekday %>

<% end %>
<% form_for(:weekday, :url => {:action=> 'create'}) do |f| %>
<ul id="category-list">
    <% batch_id = (@b.nil? ? nil : @b.id) %>
    <%= f.hidden_field :batch_id, :value => batch_id %>
    <% @days.each do |w| %>
      <li class="list<%=cycle('odd','even') %>">
        <% q = w.to_i %>
        <div class="category-name"><%= @day[q] %></div>
        <%  if week.include?(w) %>
          <div class="category-edit"><%= check_box_tag "weekdays[]", w, true %></div>
        <% else %>
          <div class="category-edit"><%= check_box_tag "weekdays[]", w, false %></div>
        <% end %>
      </li>
    <% end %>

  </ul>
     <%= submit_tag "â–º Save", :class=>'submit_button' %>
<% end %>

