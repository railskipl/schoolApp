	<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			  <img src="/images/admission/admission_page_logo.jpg" />
			  <h1>Admission</h1>
			  <h3>Previous Details</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
			
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">

		  <% unless flash[:notice].nil? %>
		    <p class="flash-msg"> <%= flash[:notice] %> </p>
		  <% end %>
		
		
		  <% form_for :student_previous_details do |a| %>
		  <%#= error_messages_for 'employee_bank_details' %>
		
		    <span class="span-sub-heading">Previous Educational Details</span>
		    <hr class="sub-heading"></hr>
		    <div id="form-contents">
		      <%= a.hidden_field :student_id, :value => @student.id %>
		      <div class="label-field-pair">
		        <label>Institution name</label>
		        <div class="text-input-bg"><%= a.text_field :institution %></div>
		        <div class="extender"></div>
		      </div>
		      <div class="label-field-pair">
		        <label>Course</label>
		        <div class="text-input-bg"><%= a.text_field :course %></div>
		        <div class="extender"></div>
		      </div>
		      <div class="label-field-pair">
		        <label>Year</label>
		        <div class="text-input-bg"><%= a.text_field :year %></div>
		        <div class="extender"></div>
		      </div>
		      <div class="label-field-pair">
		        <label>Total mark</label>
		        <div class="text-input-bg"><%= a.text_field :total_mark %></div>
		        <div class="extender"></div>
		      </div>
		      <div class="save-proceed-button">
		        <%= link_to "► Skip", {:controller => "student", :action => "admission4", :id => @student.id },:class=>'skip' %>
		
		        <%= submit_tag "► Save & Proceed" %>
		
		      </div>
		    </div>
		  <% end %>
		  <div class="ajax-subject">
		    <ul id="added-subjects">
		<%  unless @previous_subject.nil? %>
		<% @previous_subject.each  do |p| %>
		
		<li><div class="name"><%= p.subject %></div><div class="val"><span>:</span><%= p.mark %></div></li>
		
		<% end %>
		  <% end %>
		    </ul>
		    <%= link_to_remote "Add subject", :url=>{:controller=>"student",:action=>"previous_subject", :id=>@student.id}%>
		    <div id="subject">
		
		    </div>
		  </div>
		</div>
		
	</div> <!-- #content -->


