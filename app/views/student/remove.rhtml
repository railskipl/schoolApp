	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/student_details/student_details_logo.jpg" />
			  <h1>Students</h1>
			  <h3>Remove student</h3>
			  <div id="app-back-button">
			     <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>		
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">
		
		  <div id="student-details">
		    <h3><%= @student.full_name %></h3>
		    <h4>Adm no : <%= @student.admission_no %></h4>
		    <h4>Class : <%= @student.batch.course_name %></h4>
		  </div>
		
		  <div class="extender"> </div>
		  <% if @student.is_active == true %>
		  <div class="link-box">
		    <div class="link-heading"> <%= link_to "Student leaving Institution", :controller => "student", :action => "change_to_former", :id => @student.id %> </div>
		    <div class="link-descr">For students leaving the Institution, use this option to remove them from the list of active students and place them in the former students list.</div>
		  </div>
		  <% else %>
		    <div class="link-box">
		    <div class="link-heading"> <a>Student has left the school</a> </div>
		    <div class="link-descr"><b>Reason:</b><%= @student.status_description %> </div>
		  </div>
		    <% end %>
		  <div class="link-box">
		    <div class="link-heading"> <%= link_to "Remove student records", :controller => "student", :action => "delete", :id => @student.id %> </div>
		    <div class="link-descr">Completely delete student's records from the Institution's databases. Use this option only if you created the student record by accident and want to remove it completely.</div>
		  </div>
		
