	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/admission/admission_page_logo.jpg" />
			  <h1>Students</h1>
			  <h3>Leaving school</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">
		
		  <div id="student-details">
		    <h3><%= @student.full_name %></h3>
		    <h4>Adm no : <%= @student.admission_no %></h4>
		    <h4>Class : <%= @student.batch.course_name %></h4>
		  </div>
		
		  <div class="extender"> </div>
		
		  <div id="remove-student">
		    <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
		    <p>For students leaving the school, use this option to remove them from the list of active students and place them in the former students list.</p>
		
		    <% remote_form_for :remove do |f| %>
		      <div class="label-field-pair">
		        <label for="remove_descr">Reason for leaving</label>
		        <div class="text-input-bg"><%= f.text_field :status_description %></div>
		      </div>
		
		      <div id="submit-button">
		        <%= submit_tag 'â–º Remove' %>
		      </div>
		
		    <% end %>
		  </div><br />
		  <br/>
		  <div id="tc-generate"></div>
		
		</div>		
		
	</div> <!-- #content -->