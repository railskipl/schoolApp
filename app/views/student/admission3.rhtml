	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/admission/admission_page_logo.jpg" />
			  <h1>Admission</h1>
			  <h3>Step 3 - Emergency contact</h3>
			</div>			
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		<div id="page-yield">

		  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
		
		  <p class="flash-msg">Select one of the guardians as emergency contact.</p>
		
		  <% form_for :immediate_contact do |f| %>
		    <ul id="parents-list">
		      <%- @parents.each do |p| -%>
		        <li class="list<%=cycle('odd', 'even')%>">
		          <% if p.is_immediate_contact? %>
		            <%= f.radio_button "contact", p.id, {:checked => 'checked'} %> <%= p.full_name %>
		          <% else %>
		            <%= f.radio_button "contact",p.id, :checked => 'checked'%> <%= p.full_name %>
		          <% end %>
		        </li>
		      <% end %>
		    </ul>
		    <div id="submit-button"><%= submit_tag "" , :value => "â–º Finish", :id => 'finish-button' %></div>
		  <% end %>
		</div>
		
	</div> <!-- #content -->