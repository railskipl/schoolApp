






   





	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/HR/show_hr.png" alt="" />
			  <h1>Payroll</h1>
			  <h3>Add new category</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
			<div id="page-yield">
		
		  <% unless flash[:notice].nil? %>
		    <p class="flash-msg"> <%= flash[:notice] %> </p>
		  <% end %>
		
		  <% form_for :category do |c| %>
		      <%= error_messages_for 'category' %>
		
		    <div id="form-content">
		      <div class="label-field-pair">
		        <label for="category_name">Category name</label>
		        <div class="text-input-bg"><%= c.text_field :name %></div>
		      </div>
		
		      <div class="label-field-pair">
		        <label for="percentage">Percentage</label>
		        <div class="text-input-bg"><%= c.text_field :percentage %></div>
		      </div>
		
		      <div class="label-field-pair">
		        <label for="percentage_of">Percentage of</label>
		        <div class="text-input-bg">
		          <%= select :category, :payroll_category_id, @categories.map {|cat| [cat.name, cat.id]}, :prompt =>"Select" %>
		        </div>
		      </div>
		 <div class="label-radio-pair">
		      <label class="status" for="status">Status</label>
		<div id="radio-buttons">
		      <%= c.radio_button  "status", "true", :checked => "checked" %>
		      <label class="label_for_status" for="add_grade_status_true">Active</label>
		
		      <%= c.radio_button  "status", "false" %>
		      <label class="label_for_status" for="add_grade_status_false">Inactive</label>
		    </div>
		    </div>
		      <div class="label-checkbox">
		        <%= c.check_box :is_deduction %> Is deduction?
		      </div>
		<div class="extender"></div>
		   
		    <div id="submit-button">
		      <%=submit_tag("â–º Create") %>
		    </div>
		
		
		      </div>
		  <% end %>
		
		  <div id="category-list">
		    <%= render :partial=>"category" %>
		  </div>
		
		   </div>		
		
	</div> <!-- #content -->