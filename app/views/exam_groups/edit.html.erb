	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/examination/show_exam.png" alt="Exam" />
			  <h1>Exams</h1>
			  <h3>Edit Exam group</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">

		  <% unless flash[:notice].nil? %>
		    <p class="flash-msg"> <%= flash[:notice] %> </p>
		  <% end %>
		
		  <div class="box">
		    <div class="bread_crumb">
		         <%= link_to 'Courses', courses_path %> &raquo;
		        <%= link_to @course.full_name, @course %> &raquo;
		        <%= link_to "Batch #{@batch.name}" %> &raquo;
		        <%= link_to 'Exams', batch_exam_groups_path(@batch) %> &raquo;
		       Edit Exam
		        </div>
		
		
		    <% form_for [@batch, @exam_group] do |f| %>
		
		      <%= f.error_messages %>
		
		
		      <div class="label-field-pair">
		        <label for="exam_name"><%= f.label :name %></label>
		        <div class="text-input-bg"> <%= f.text_field :name %></div>
		      </div>
		      <div id="sub_button"><%= submit_tag "", :value => "â–º Save", :class => "submit_button" %></div>
		
		
		
		    <% end %>
		
		  </div></div>

		
	</div> <!-- #content -->