
<div id="wrapper">
  <div id="top_logo">
    <%= image_tag  "/images/school-cloud.png" %>
  </div>

  <div id="help_top">
    <div id="help_link"><a href="http://www.fedena.com/help.html">Help!</a></div>
  </div>

  <div id="login_area_bg">

    <% form_for :set_new_password do |u| %>

    <div id="login_area">
      <label for="username">New password</label>
      <div id="username_textbox_bg">
          <%= u.password_field :new_password %>
      </div>

      <label for="password">Confirm password</label>
      <div id="password_textbox_bg">
        <%= u.password_field :confirm_password %>
      </div>

      <div id="resetpw_area">
        <%= submit_tag "Reset", :class => "submit" %>
      </div>


      <% unless flash[:notice].nil? %>
        <div id="notice"> <%= flash[:notice] %></div>
      <% end %>

      </div>
    </div>
    <% end %>
  </div>

  <div id="help_forgot_pw">
    <div id="footer_links">
      &nbsp;
    </div>
  </div>

  <div id="footer">
    <div id="footer_links">
      <a href="">FAQ</a> <span>|</span>
      <a href="">Fedena</a> <span>|</span>
      <a href="">Support</a>
    </div>
  </div>
