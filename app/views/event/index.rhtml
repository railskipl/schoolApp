	<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			  <img src="/images/manage_news/manage_news_logo.png" />
			  <h1>Events</h1>
			  <h3>Step 1 - Event creation</h3>
			  <div id="app-back-button">
			       <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
				
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		<div id="page-yield">
		  <%= flash[:notice] %>
		  <% form_for :events do |f| %>
		    <%= error_messages_for 'events' %>
		    <div class="label-field-pair">
		      <label for="start-date">Start Date:</label>
		      <div class="text-input-bg"><%= calendar_date_select_tag :start_date, @date, :time => true  %></div>
		    </div>
		    <div class="label-field-pair">
		      <label for="end-date">End Date:</label>
		      <div class="text-input-bg"><%= calendar_date_select_tag :end_date, @date, :time => true  %></div>
		    </div>
		    <div class="label-field-pair">
		      <label for="title">Title:</label>
		      <div class="text-input-bg"><%= f.text_field :title %></div>
		    </div>
		    <div class="label-field-pair">
		      <label for="description">  Description :</label>
		    </div>
		    <%= f.text_area "description" %>
		    <div class="label-field-pair">
		      <label for="is-holiday">Is Holiday?</label>
		      <%= f.check_box :is_holiday %>
		    </div>
		    <div class="label-field-pair">
		      <label for="end-date"> Event common to all</label>
		      <%= f.check_box :is_common %>
		    </div>
		    <%= f.submit "â–º Create Event" %>
		  <% end %>
		</div>	
	</div> <!-- #content -->
