	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/admission/admission_page_logo.jpg" alt="" />
			  <h1>Homework results</h1>
			  <h3>Add or edit results</h3>
			  <div id="app-back-button">
			    <%= link_to image_tag("/images/buttons/back.png", :border => 0), :back %>
			  </div>
			</div>
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		<div id="page-yield">
		
		  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>
		
		  <div id="form-content">
		    <div class="text-input-bg">
		      <%= select :homework_result, :course_id, @courses.map { |c| [c.grade + " - " + c.section, c.id] },
		        {:prompt => "Select course"},
		        {:onChange => "#{remote_function(:url => {:action => "update_subjects"}, 
		        :with => "'course_id='+value",
		        :before => "Element.show('loader')",
		        :success => "Element.hide('loader')"
		        )}"}%>
		    </div>
		    <div id="subjects1"> <%= render :partial => 'subjects', :object => @subjects %></div>
		    <div id="homeworks1"> <%=render :partial => 'homeworks', :object => @homeworks %> </div>
		    <%= image_tag("loader.gif",
		              :align => "absmiddle",
		              :border => 0,
		              :id => "loader",
		              :style =>"display: none;" ) %>
		    <div class="extender"></div>
		  </div>
		  <div id="homework_result"></div>
		</div>
	</div> <!-- #content -->
	
	


