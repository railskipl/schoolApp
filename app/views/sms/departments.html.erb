<div id="content-header">
  <img src="/images/show_news/show_news_logo.png" alt="" />
  <h1>SMS</h1>
  <h3>Departments</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="box">

<% remote_form_for :send_sms,
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')" do |sms| %>

    <div id="list">
      <div class="sel-list">
        Select : <%= link_to_function 'All', "$$('input.right').each(function(checkbox) { checkbox.checked = true; });" %>,
<%= link_to_function 'None', "$$('input.right').each(function(checkbox) { checkbox.checked = false; });" %>
      </div>
<% @departments.each do |dept| %>
     <div class="name_list<%=cycle('odd', 'even')%>"><li>
  <label> <%= check_box_tag "send_sms[dept_ids][]", dept.id,false,:class=>'right' %>
  <div class="att_list_names"><%= dept.name %></div> </label>
  </li>  </div>
<% end %>
    </div>
<div class="label-field-pair">
<div class="text-input-bg">
<%= text_area :send_sms,:message, :rows=>5,:cols=>30 %><br/>
</div>
</div>
  <%= submit_tag 'Send SMS',:class=>'submit_button' %>

<% end %>

<div id="status-message">

</div>
    <%= image_tag("loader2.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader",
      :style =>"display: none;" ) %>

  </div>
</div>