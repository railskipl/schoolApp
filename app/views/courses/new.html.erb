	<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			  <img src="/images/examination/show_exam.png" alt="Exam" />
			  <h1>Courses</h1>
			  <h3>New</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
			
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">
		
		  <% unless flash[:notice].nil? %>
		    <p class="flash-msg"> <%= flash[:notice] %> </p>
		  <% end %>
		
		  <div class="box">
		    <div class="bread_crumb">
		      <%= link_to 'Courses', courses_path %> &raquo;
		      New
		    </div>
		
		    <% form_for setup_course(@course) do |f| %>
		
		      <%= error_messages_for :course %>
		
		      <div class="label-field-pair">
		        <div class="label-container"><%= f.label :course_name %></div>
		        <div class="input-container"><%= f.text_field :course_name %> <strong><strong>(e.g. First, Second, ..etc)</strong></div>
		      </div>
		
		      <div class="label-field-pair">
		        <div class="label-container"><%= f.label :section_name %></div>
		        <div class="input-container"><%= f.text_field :section_name %> <strong>(e.g. A, B, C, D)</strong></div>
		      </div>
		
		      <div class="label-field-pair">
		        <div class="label-container"><%= f.label :code %></div>
		        <div class="input-container"><%= f.text_field :code %> <strong><strong>(e.g. Primary, Middle, High)</strong></div>
		      </div>
		
		      <p style="font-size:15px; font-weight:bold; margin: 12px 0;">Initial batch details</p>
		
		      <% f.fields_for :batches do |batch_form| %>
		
		        <div class="label-field-pair">
		          <div class="label-container"><%= batch_form.label :name %></div>
		          <div class="input-container"><%= batch_form.text_field :name %></div>
		        </div>
		
		
		        <div class="label-field-pair">
		          <div class="label-container"><%= batch_form.label :start_date %></div>
		          <div class="input-container"><%= calendar_date_select_tag 'course[batches_attributes][0][start_date]', Date.today %></div>
		        </div>
		
		        <div class="label-field-pair">
		          <div class="label-container"><%= batch_form.label :end_date %></div>
		          <div class="input-container"><%= calendar_date_select_tag 'course[batches_attributes][0][end_date]', Date.today + 1.year %></div>
		        </div>
		
		      <% end %>
		
		      <%= submit_tag "", :value => "â–º Save", :class => "submit_button" %>
		
		    <% end %>
		
		    <div class="extender"></div>
		  </div>
		</div>	
		
	</div> <!-- #content -->
