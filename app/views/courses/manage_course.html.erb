
	<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			    <img src="/images/show_settings.png" alt="Course" />
			  <h1>Courses</h1>
			  <h3>Manage Course</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
			
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="inner-tab-menu">
		  <ul>
		    <li><%= link_to 'New', new_course_path %> </li>
		
		  </ul>
		</div>
		
		
		<div id="page-yield">
		
		    <% unless flash[:notice].nil? %>
		    <p class="flash-msg"> <%= flash[:notice] %> </p>
		  <% end %>
		
		
		    <% unless flash[:warn_notice].nil? %>
		    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
		  <% end %>
		
		 <div class="box">
		<h4 align="center">Courses</h4>
		
		<ul id="category-list">
		
		    <% @courses.each do |course| %>
		      <li class="list<%=cycle('odd', 'even')%>">
		        <div class="category-name"><%= link_to course.full_name, course %></div>
		        <div class="category-edit"><%= link_to 'Edit', edit_course_path(course) if permitted_to? :edit, :courses %></div><div class="category-delete">   <%= link_to('Delete', course_path(course), :method => 'delete', :confirm => 'Are you sure?') if permitted_to? :destroy, :courses %></div>
		      </li>
		     <% end %>
		
		</ul>
		  <div class="extender"></div>
		  </div>
		</div>
		
	</div> <!-- #content -->