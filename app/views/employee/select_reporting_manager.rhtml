	<div id="content" class="xgrid">
		
		<% if @employee.nil? %>
		  <div id="no_result">No Employee found</div>
		<% else %>
		<p class="flash-msg">Select the manager by clicking on it and then update !</p>
		  <% @employee.each do |r| %>
		    <div id="ajax_result">
		      <a href="#" onclick="update_reporting_manager(<%= r.id %>)"><%= r.first_name + " " + r.last_name %></a><br/>
		      <small>Emp ID.<%= r.employee_number %></small>
		    </div>
		  <% end %>
		<% end %>		
		
	</div> <!-- #content -->
