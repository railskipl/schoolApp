	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			   <img src="/images/HR/show_hr.png" alt="" />
			  <h1>View all</h1>
			  <h3>view all</h3>
			  <div id="app-back-button">
			  <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>		
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">
		       <div class="label-field-pair">
		  <label>Select a Department : </label>
		<div class="text-input-bg"><%= select :subject_assignment, :department_id, @departments.map { |s| [s.name, s.id] },
		                                        {:prompt => "Select department"},
		                                        {:onChange => "#{remote_function(:url => {:action => "employees_list"},
		                                        :with => "'department_id='+value")}"} %>
		  </div>
		       </div>
		  <div class="extender"></div>
		<div id="employee_list"></div>
		</div>		
		
	</div> <!-- #content -->