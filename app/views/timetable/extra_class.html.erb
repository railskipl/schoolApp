	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/show_timetable.png" />
			  <h1>Timetable</h1>
			  <h3>Swap class</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>				
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">
		  <div class="box">
		  <% form_remote_for :extra_class do |f| %>
		  <div class="label-field-pair">
		    <label for="student_date_of_birth">Select date</label>
		    <div class="text-input-bg">
		      <%= calendar_date_select_tag 'extra_class[date]',
		        Date.today , :year_range => 40.years.ago..0.years.ago %>
		    </div>
		  </div>
		  <div class="label-field-pair">
		    <label for="student_grade">Course & Batch</label>
		    <div class="text-input-bg"><%= select :extra_class, :batch_id, Batch.active.map {|b| [b.full_name, b.id]} %></div>
		  </div>
		
		   <%= submit_tag "â–º OK", :class=>'submit-button' %>
		  <% end %>
		</div></div>
		<div id="extra-class-form"></div>		
		
	</div> <!-- #content -->