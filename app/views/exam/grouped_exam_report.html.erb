	<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			  <img src="/images/examination/show_exam.png" alt="Exam" />
			  <h1>Exams</h1>
			  <h3>Grouped exam Reports</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
			
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		<div id="page-yield">
		  <% unless flash[:notice].nil? %>
		    <p class="flash-msg"> <%= flash[:notice] %> </p>
		  <% end %>
		  <div class="box">
		
		    <% form_for :exam_report, :url=>{:action=>'generated_report4'} do |x| %>
		      <div class="label-field-pair">
		        <label for="student_course">Select a batch:
		          <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
		        </label>
		        <div  class="text-input-bg">
		          <%= select :exam_report, :batch_id,
		            Batch.find(:all, :order => 'id ASC').map {|b| [b.full_name, b.id]},
		            {:prompt => 'Select a batch'},
		            {:onChange => "#{remote_function(:url => {:action => "final_report_type"},
		            :with => "'batch_id='+value"
		            )}"} %></div></div>
		      <div id="report_type"></div>
		      <%= submit_tag "", :value => "â–º View", :class => "submit_button" %>
		      <% #  x.submit 'View' %>
		
		    <% end %>
		    <div class="extender"></div>
		  </div></div>
	</div> <!-- #content -->