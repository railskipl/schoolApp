<% form_for :element , :url => {:action => 'fees_student_specific', :id => @student.id,:date =>@date.id } do |f| %>
  <div id="create_user_form">
    <div class="label_field">
      <label for="label">Label</label>
      <div class="text_field_bg"><%= f.text_field :label %></div>
      <div class ="comment">Leave the field blank if this will be overridden by another category.</div>
    </div>
    <div class="label_field">
      <label for="amount">Amount</label>
      <div class="text_field_bg"><%= f.text_field :amount %></div>
    </div>
    <div class="label_field">
      <label for="amount">Select a fee category that you wish to override</label>
      <div class="text_field_bg"><%= select :element, :parent_id, @components.map{|c| [c.label, c.id]}, :prompt => 'Select a category' %></div>
    </div>

    <div class="label_field">
     <%= image_submit_tag "", :value => "Save Changes", :class => "submit_button" %>
    </div>
  </div>
  <% end %>