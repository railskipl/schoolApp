

	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/show_finance.png" alt="" />
			  <h1>Additional Fees</h1>
			  <h3>Create Additional Fees </h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>		
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		<div id="page-yield">
		
		  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
		   <div class="box">
		  <% form_for(:additional_fees,:url => {:action=> 'additional_fees_create'}) do |form| %>
		
		     <div class="label-field-pair">
		    <div class="label-container"><label>Name* :</label> </div>
		    <div class="input-container"><%= form.text_field :name %></div>
		   </div>
		       <div class="label-field-pair">
		    <div class="label-container"><label>Description: </label> </div>
		    <div class="input-container"><%= form.text_field :description %></div>
		   </div>
		       <div class="label-field-pair">
		    <div class="label-container"><label>Course : </label></div>
		    <div class="input-container"><%= form.select :batch_id, @batches.map { |c| [c.full_name, c.id] },:prompt => "Select Course"  %></div>
		   </div>
		       <div class="label-field-pair">
		    <div class="label-container"><label>Start date*:</label> </div>
		    <div class="input-container"><%= calendar_date_select_tag 'additional_fees[start_date]', Date.today %></div>
		   </div>
		       <div class="label-field-pair">
		    <div class="label-container"><label>End date*:</label> </div>
		    <div class="input-container"><%= calendar_date_select_tag 'additional_fees[end_date]', Date.today %></div>
		   </div>
		       <div class="label-field-pair">
		    <div class="label-container"><label>Due date*:</label> </div>
		    <div class="input-container"><%= calendar_date_select_tag 'additional_fees[due_date]', Date.today %></div>
		   </div>
		
		    <%=  submit_tag "â–º Save",:class=>'submit_button' %>
		  <% end %>
		
		
		</div>
		</div>				
	</div> <!-- #content -->