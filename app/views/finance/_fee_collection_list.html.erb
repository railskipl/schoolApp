<% unless flash[:notice].nil? %>
  <p class="flash-msg"> <%= flash[:notice] %> </p>
<% end %>

 <table id="listing">
  <tr class="tr-head">
    <td>Name</td>
    <td>Start Date</td>
    <td>End date</td>
    <td>Due date</td>
    <td></td>
  </tr>

  <% @finance_fee_collections.each do |f| %>
    <tr class="tr-<%= cycle('odd', 'even')%> ">
      <td class="col-3"><%= shorten_string(f.name,17)%></td>
      <td class="col-3"><%= f.start_date %></td>
      <td class="col-3"><%= f.end_date %></td>
      <td class="col-3"><%= f.due_date %></td>
      <td class="col-1">
        <div class="edit"><%= link_to_remote 'Edit', :url => {:action => 'fee_collection_edit', :id => f.id} %></div>
        <% unless f.check_fee_category == false %>
          <div class="delete"><%= link_to_remote 'Delete', :url => {:action => 'fee_collection_delete', :id => f.id} %></div>
        <% end %>
      </td>
   </tr>
  <% end %>
</table>