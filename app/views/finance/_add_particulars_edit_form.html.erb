<label class="head_label">Edit Particulars for Additional Fees<span></span></label>

<% form_remote_for :finance_fee_particulars,
  :url => {:action => 'add_particulars_update',:id => @finance_fee_particulars.id},
  :complete => 'Modalbox.hide();return false;' do |form| %>

  <div id="form-errors"></div>
   <div class="label-field-pair">
    <div class="label-container"><label>Fee name :</label> </div>
    <div class="input-container"><%= form.text_field :name %></div>
   </div>
     <div class="label-field-pair">
    <div class="label-container"><label>Fee description :</label> </div>
    <div class="input-container"><%= form.text_field :description %></div>
   </div>

  <%  unless @finance_fee_particulars.admission_no.nil? %>
    <div class="label-field-pair">
    <div class="label-container"><label>Admission No :</label> </div>
    <div class="input-container"><%= form.text_field :admission_no, :value => @finance_fee_particulars.admission_no ,
        :disabled => true %></div>
   </div>
  <% end %>


  <% unless @finance_fee_particulars.student_category_id.nil? %>
    <div class="label-field-pair">
    <div class="label-container"><label>Student Category :</label> </div>
    <div class="input-container"><%= form.text_field :student_category_id,
        :value => StudentCategory.find(@finance_fee_particulars.student_category_id).name,
        :disabled => true %></div>
    </div>
  <% end %>


     <div class="label-field-pair">
    <div class="label-container"><label>Fee amount :</label> </div>
    <div class="input-container"><%= form.text_field :amount, :value => @finance_fee_particulars.amount, :disabled => true   %></div>
   </div>
   <%=  submit_tag "â–º Update",:class=>'submit_button' %>
<% end %>