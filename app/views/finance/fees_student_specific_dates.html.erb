	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			      <img src="/images/show_finance.png" alt="" />
			  <h1>Special Fees for student</h1>
			  <h3><%= @student.first_name+" "+@student.last_name%></h3>
			  <div id="app-back-button">
			  <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">
		  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
		  <div class="text-input-bg">
		    <%= select  :fees_submission, :dates_id, @dates.map { |e| [e.name+" : "+e.start_date.to_s, e.id]},
		      {:prompt => "Select fees collection date"},
		      {:onChange => "#{remote_function( :url =>
		      {:action => "update_fees_specific"},
		      :with => "'date='+value+'&id='+#{@student.id}") }"} %>
		  </div>
		
		<div id="fees_specific"> </div>
		
		<div id="modal-box" style="display:none;"></div>
		
		</div>		
		
	</div> <!-- #content -->