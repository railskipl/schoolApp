
	<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			   <img src="/images/show_finance.png" alt="" />
			  <h1>Donations</h1>
			  <h3>Donation receipt</h3>
			  <div id="app-back-button">
			   <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
			
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
	<div id="inner-tab-menu">
 <ul>
  <li><%= link_to "Print Receipt", {:action => 'donation_receipt_pdf', :id => @donation.id}, :format => 'pdf', :target => '_blank' %></li>
 </ul>
</div>
<div id="page-yield">
 <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
 <div class="box">

    <div class="field1">Donor:</div>
    <div class="val"> <%= @donation.donor %></div>

    <div class="field1">Description: </div>
    <div class="val"><%= @donation.description %></div>

    <div class="field1">Amount: </div>
    <div class="val"><%= @donation.amount %></div>
    <div class="field1">Transaction ID: </div>
    <div class="val"><%= @donation.transaction.id unless @donation.transaction_id.nil? %></div>

 </div>
 </div>	
		
	</div> <!-- #content -->
	
	
	
	

