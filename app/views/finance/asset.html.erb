	<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			   <img src="/images/show_finance.png" alt="" />
			  <h1>Asset-Liability Management</h1>
			  <h3>Assets</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>		
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
		
		<div id="page-yield">
		  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
		  <div class="box">
		  <div class ="link-box">
		    <div class="link-heading">
		      <%= link_to_function("Create") { |page|
		        page.replace_html 'modal-box', :partial => 'create_asset_form'
		        page << "Modalbox.show($('modal-box'), {title: 'Create new Asset', width: 500});"
		      } %>
		    </div>
		    <div class="link-descr"> creates new asset </div>
		  </div>
		
		
		  <div class="link-box">
		    <div class="link-heading"><%= link_to "View", :action => "view_asset" %> </div>
		    <div class="link-descr"> Asset view</div>
		  </div>
		
		  <div id="modal-box" style="display:none;"></div>
		</div>
		</div>		
		
	</div> <!-- #content -->