<label class="head_label">Add Particulars for Additional Fees<span></span></label>

<% form_remote_for :finance_fee_particulars, :url => {:action => 'add_particulars_create',:id => @collection_date.id} do |form| %>
  <div id="form-errors"></div>
  <div class="label-field-pair">
    <div class="label-container"><label>Fee name :</label> </div>
    <div class="input-container"><%= form.text_field :name %></div>
   </div>
     <div class="label-field-pair">
    <div class="label-container"><label>Fee description :</label> </div>
    <div class="input-container"><%= form.text_field :description %></div>
   </div>
<div class="label-field-pair2">
    <div class="label-container2"><label>Create using</label></div>
    <div class="input-container2">
     <div class="opt"><%= radio_button("particulars","select","all",:checked => true) %>All</div>
     <div class="opt"><%= radio_button("particulars","select","student",
      {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
        :with => "'select_value='+value")}"}) %> Admission No </div>
      <div class="opt"> <%= radio_button("particulars","select","category",
      {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
        :with => "'select_value='+value")}"}) %>Student Category </div>
    </div>
   </div>
  <div id="student"></div>
    <div class="label-field-pair">
    <div class="label-container"><label>Fee amount :</label> </div>
    <div class="input-container"><%= form.text_field :amount %></div>
   </div>
    <%=  submit_tag "â–º Add",:class=>'submit_button' %>

<% end %>



