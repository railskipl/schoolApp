		    <p class="flash-msg"> <%= flash[:notice] %> </p>
		  <% end %>
		  <div class="box">
		  <% form_for :xml_settings do |f| %>
		    <div class="label-field-pair">
		      <label for="student_grade">Ledger name corresponding to salary</label>
		      <div class="text-input-bg"> <%= text_field :xml_settings, :salary, :value => @xml[:salary] %>
		    </div>
		      </div>
		  <div class="label-field-pair">
		    <label for="student_grade">Ledger name corresponding to fees</label>
		    <div class="text-input-bg"><%= text_field :xml_settings, :fee, :value => @xml[:fee]%>
		    </div>
		  </div>
		    <div class="label-field-pair">
		      <label for="student_grade">Ledger name corresponding to donation</label>
		      <div class="text-input-bg"> <%= text_field :xml_settings, :donation, :value => @xml[:donation] %>
		      </div>
		    </div>
		  
		  <%= submit_tag "â–º Save Changes",:class=>'submit_button' %>
		<% end %>
		</div>
		</div>	
		
	</div> <!-- #content -->